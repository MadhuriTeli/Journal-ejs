<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle" id="title" autocomplete="off">
  </div>

  <div class="form-group mb-3">
    <label for="post" class="form-label">Post</label>
    <textarea class="form-control" id="post" name="postContents" rows="3"></textarea>
  </div>

  <button class="btn btn-primary mb-3"type="submit" name="button">Pubish</button>
</form>

<%- include('partials/footer'); -%>
